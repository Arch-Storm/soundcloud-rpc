{
  "name": "soundcloud-rpc",
  "version": "0.0.2",
  "description": "A desktop application that displays the user's currently playing SoundCloud track in their Discord status using the Electron framework and Discord Rich Presence API.",

  "scripts": {

    "builddistwin": "electron-packager . Soundcloud --platform=win32 --arch=x64 --electron-version=13.1.7 --overwrite",
    "builddistmac": "electron-packager . Soundcloud --platform=darwin --arch=x64 --electron-version=13.1.7 --overwrite",
    "builddistlinux": "electron-packager . Soundcloud --platform=linux --arch=x64 --electron-version=13.1.7 --overwrite",

    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js"
  },

  "author": "Richard Habitzreuter",
  "license": "MIT",
  "devDependencies": {
    "@types/discord-rpc": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^24.3.0",
    "eslint": "^7.32.0",
    "typescript": "^4.8.3"
  },

  "dependencies": {
    "discord-rpc": "^4.0.1"
  }
}
